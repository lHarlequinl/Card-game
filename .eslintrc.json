{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["prettier"],
	"parser": "@typescript-eslint/parser", // проверка TS
	"plugins": ["prettier"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020
	},
	"rules": {
		"prettier/prettier": ["error", { "endOfLine": "auto" }],
		"camelcase": ["error"],
		"eqeqeq": ["error", "always"],
		"no-unused-vars": ["off"]
	}
}
