{
	"compilerOptions": {
		"strict": true, // Включает все жесткие проверки типов
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*", 
		"src/declarations.d.ts"
	],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
